{
  "manifest_version": 3,
  "name": "Hotel Staff Productivity Tracker",
  "version": "1.0",
  "description": "Track and manage hotel staff tasks and productivity metrics",
  "permissions": [
    "storage",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hotel Staff Productivity Tracker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}